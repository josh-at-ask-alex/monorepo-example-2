{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "./dist"]
}
